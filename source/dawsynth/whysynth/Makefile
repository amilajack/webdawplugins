# GNU Makefile based on shared rules provided by the Native Client SDK.
# See README.Makefiles for more details.

VALID_TOOLCHAINS := newlib glibc pnacl

NACL_SDK_ROOT ?= $(abspath $(CURDIR)/../../..)

include $(NACL_SDK_ROOT)/tools/common.mk

TARGET = whysynth
HOST = ../../host/cpp
PLUG = $(HOST)/plugformats
INC = -I$(HOST) -I$(HOST)/inc -I$(HOST)/plugformats
LIBS = ppapi_cpp ppapi pthread fftw3f

CFLAGS = -DDLLweb -DPNACL -DDSSI -Wall $(INC) -DY_PLUGIN -DY_BOGUS_MLOCKALL

SOURCES = $(HOST)/pdawhost.cc $(HOST)/dawhost.cc $(HOST)/dawplugin.cc $(HOST)/utils.cc \
$(HOST)/dawbundle.cc $(PLUG)/dssi.cc $(PLUG)/ladspa.cc \
src/dssp_synth.c src/dssp_event.c src/agran_oscillator.c src/sampleset.c src/wave_tables.c \
src/wave_data.c src/whysynth_voice_render.c src/whysynth_voice.c src/agran_tables.c \
src/minblep_tables.c src/padsynth.c src/effects.c src/effect_reverb.c src/effect_screverb.c \
src/common_data.c src/whysynth_ports.c src/whysynth_data.c src/whysynth-web.cc

# Build rules generated by macros from common.mk:

$(foreach src,$(SOURCES),$(eval $(call COMPILE_RULE,$(src),$(CFLAGS))))

# The PNaCl workflow uses both an unstripped and finalized/stripped binary.
# On NaCl, only produce a stripped binary for Release configs (not Debug).
ifneq (,$(or $(findstring pnacl,$(TOOLCHAIN)),$(findstring Release,$(CONFIG))))
$(eval $(call LINK_RULE,$(TARGET)_unstripped,$(SOURCES),$(LIBS),$(DEPS)))
$(eval $(call STRIP_RULE,$(TARGET),$(TARGET)_unstripped))
else
$(eval $(call LINK_RULE,$(TARGET),$(SOURCES),$(LIBS),$(DEPS)))
endif

$(eval $(call NMF_RULE,$(TARGET),))
